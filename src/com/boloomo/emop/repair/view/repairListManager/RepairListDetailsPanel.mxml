				this.title = "修理单详情";
			}
			
			public function strToDate(str:String):Date{
				var arr:Array =new Array()
				arr = str.split("-");
				var date:Date = new Date();
				if(arr.length >0){
					date.fullYear = arr[0];
					date.month = parseInt(arr[1])-1;
					date.date = arr[2];
				}
			
			return date;
			}

