			protected function delEquip_clickHandler(event:MouseEvent):void
			{
				if(eList.selectedIndex !=-1 ){
					var obj:Object = eList.selectedItem as Object;
					for(var i:int = 0;i<arr.length;i++){
						if(arr.getItemAt(i).cwbt == obj.cwbt){
							arr.removeItemAt(i);
						}
					}
					arr.refresh();
				}
				
			}


